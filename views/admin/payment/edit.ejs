<%- include ../../partials/header.ejs  %> 
<%- include ../../partials/navbar.ejs  %> 
<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <%- include ../../partials/sidebar.ejs  %> 
    </div>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Payment</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Form Payment Edit <%= payment.name %> 
                    </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="post">
                                <div class="form-group">
                                    <label for="type">Type</label>
                                    <input type="text" class="form-control" id="type" name="type" value="<%= payment.type %> " required/>
                                </div>
                                <div class="form-group">
                                    <label for="bank">Bank</label>
                                    <div class="select2-purple">
                                        <select class="form-control select2" 
                                        multiple="multiple" 
                                        style="width: 100%;" 
                                        name="banks" 
                                        placeholder="Choose Bank" 
                                        required>
                                        <% banks.forEach(bank => { %>
                                            <option value="<%= bank._id  %>"
                                                <% payment.banks.forEach(paymentBank => { %>
                                                    <%= bank._id.toString() === paymentBank._id.toString() ? 'selected' : '' %>
                                                <% }) %> 
                                                > 
                                                <%= bank.name %>-<%= bank.nameBank %>-<%= bank.noRekening %> 
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </main>
        <%- include ../../partials/footer.ejs  %> 
        <%- include ../../partials/script.ejs  %> 
    </div>
</div>