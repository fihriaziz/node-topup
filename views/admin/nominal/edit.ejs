<%- include ../../partials/header.ejs  %> 
<%- include ../../partials/navbar.ejs  %> 
<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <%- include ../../partials/sidebar.ejs  %> 
    </div>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Nominal</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                         Edit Nominal <%= nominal.coinName %> 
                    </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="post">
                                <div class="form-group">
                                    <label for="coinName">Coin Name</label>
                                    <select class="form-control select2 " style="width: 100%;" name="coinName" required>
                                        <option selected="selected">Choose Coin</option>
                                        <option value="Gold" <%= nominal.coinName === "Gold" ? "selected" : '' %> ">Gold</option>
                                        <option value="Diamond" <%= nominal.coinName === "Diamond" ? "selected" : '' %> ">Diamond</option>
                                        <option value="Jewel" <%= nominal.coinName === "Jewel" ? "selected" : '' %> ">Jewel</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="coinQuantity">Coin QTY</label>
                                    <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" placeholder="Input Coin QTY" value="<%= nominal.coinQuantity %>" required/>
                                </div>
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="number" class="form-control" id="price" name="price" placeholder="Input Coin Price" value="<%= nominal.price %>" required/>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </main>
        <%- include ../../partials/footer.ejs  %> 
        <%- include ../../partials/script.ejs  %> 
    </div>
</div>